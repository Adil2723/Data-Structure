#include <iostream>
using namespace std;

int sumOfDigits(int n) {
    if (n == 0)
        return 0;
    return (n % 10) + sumOfDigits(n / 10);
}

int nestedSum(int n) {
    if (n < 10)
        return n;
    return nestedSum(sumOfDigits(n));
}

int main() {
    int num;
    cout << "Enter a number: ";
    cin >> num;

    cout << "Single digit sum is: " << nestedSum(num) << endl;

    return 0;
}
