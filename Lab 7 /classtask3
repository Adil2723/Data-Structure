#include <iostream>
#include <string>
using namespace std;

class Product {
public:
    string name;
    double price;
    string description;
    bool availability;
};

class ProductList {
public:

    void swap(Product &a, Product &b) {
        Product temp = a;
        a = b;
        b = temp;
    }

    int partition(Product arr[], int low, int high) {
        double pivot = arr[high].price;
        int i = low - 1;

        for (int j = low; j < high; j++) {
            if (arr[j].price < pivot) {
                i++;
                swap(arr[i], arr[j]);
            }
        }
        swap(arr[i + 1], arr[high]);
        return i + 1;
    }

    void quickSort(Product arr[], int low, int high) {
        if (low < high) {
            int pi = partition(arr, low, high);
            quickSort(arr, low, pi - 1);
            quickSort(arr, pi + 1, high);
        }
    }

    void displayProducts(Product arr[], int n) {
        cout << "\nProducts sorted by price:\n";
        for (int i = 0; i < n; i++) {
            cout << i + 1 << ". Name: " << arr[i].name
                 << ", Price: $" << arr[i].price
                 << ", Description: " << arr[i].description
                 << ", Available: " << (arr[i].availability ? "Yes" : "No") << endl;
        }
    }
};

int main() {
    Product products[3];
    ProductList plist;

    for (int i = 0; i < 3; i++) {
        cout << "Enter details for product " << i + 1 << ":\n";
        cout << "Name: ";
        cin.ignore();
        getline(cin, products[i].name);

        cout << "Price: ";
        cin >> products[i].price;
        cin.ignore();

        cout << "Description: ";
        getline(cin, products[i].description);

        cout << "Availability (1 for Yes, 0 for No): ";
        cin >> products[i].availability;
        cout << endl;
    }

    plist.quickSort(products, 0, 2);
    plist.displayProducts(products, 3);

    return 0;
}
